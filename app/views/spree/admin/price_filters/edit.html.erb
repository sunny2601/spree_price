<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<div data-hook="admin_price_filter_edit_form_header">
  <h1><%= Spree.t("editing_price_filter") %></h1>

  <%= render "spree/shared/error_messages", :target => @price_filter %>
</div>

<div data-hook="admin_price_filter_edit_form">
  <%= form_for(@price_filter, :url => object_url, :html => { :method => :put }) do |f| %>
    <%= render :partial => "form", :locals => { :f => f } %>

    <div data-hook="admin_price_filter_edit_form_buttons">
      <%= render :partial => "spree/admin/shared/edit_resource_links" %>
    </div>
  <% end %>
</div>
